#!/usr/bin/bash

TFCLOUD_VERSION=2.0

# verify root
ID=$(/usr/bin/id -u)
[ $ID -ne 0 ] && echo "You must be root to run $0." && exit 1

ROOTDIR="$(pwd)"
export ROOTDIR

trap '' 2
while :; do
	clear

   LGGRN='\033[1;32m'
    BLUE='\033[1;34m'
#    BLUE=''
    GREY='\033[0;37m'
#    CYAN='\033[1;36m'
    CYAN=''
    NC='\033[0m'
    clear
echo -e "${GREY}mspos ${TFCLOUD_VERSION}  -  ${HOSTNAME}  -  $(date +'%x %l:%M %p')  -  Patched: `date -r /var/log/yum.log`  -  `dmidecode | grep Product | grep -v Not | cut -d: -f2 | sed -e 's/\ //' | head -1`  -  `cat /etc/redhat-release`  ${NC}"

printf '\u250f''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\u2501''\n'
echo -e "\u2503${BLUE} @ ${NC}`[ -f ../msposapp/.envtype ] && cat ../msposapp/.envtype || echo -e Not Installed`${NC}"
    printf '\u2503'${LGGRN}' )~ Admin Tasks'${NC}'\n'
    printf '\u2523''\u2501''\n'

printf '\u2503''\033[1m'" 1.\033[0m Configure Sendgrid"'\n'
printf '\u2503''\033[1m'" 2.\033[0m Convert to CentOS"'\n'
printf '\u2503''\033[1m'" 3.\033[0m Daisy Conversion Script"'\n'
printf '\u2503''\n'
printf '\u2503''\033[1m'" i.\033[0m Install"'\n'
printf '\u2503''\033[1m'" r.\033[0m Readme"'\n'
printf '\u2503''\033[1m'" x.\033[0m Exit"'\n'
printf '\u2517''\u2501''\n'
	echo -ne "${CYAN}Enter selection:${NC} "
	read selection
	case $selection in
	1)
		cd $ROOTDIR/bin
		cat ./config_sendgrid
		echo "Scared ya huh? :)"
		echo "Run it? y/n: "
		read runit
		[ "$runit" == "y|Y" ] && time ./config_sendgrid
		cd -
		echo "Press enter to continue.."
		read
		;;
	2)
		cd $ROOTDIR/bin
		cat ./convert_centos
		echo "Run it? y/n: "
		read runit
		[ "$runit" == "y|Y" ] && time ./convert_centos
		cd -
		echo "Press enter to continue.."
		read
		;;
	3)
		cd $ROOTDIR/bin
		cat ./erik_mig.sh
		echo "Run it? y/n: "
		read runit
		[ "$runit" == "y|Y" ] && time ./erik_mig.sh
		cd -
		echo "Press enter to continue.."
		read
		;;
	r)
		cat README.md
		echo "Press enter to continue.."
		read
		;;
	i)
		cd bin
		./install
		echo "Press enter to continue.."
		read
		;;
	x) exit ;;
	*) ;;
	esac
done
