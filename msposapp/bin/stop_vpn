#!/bin/bash

[ "$1" != "" ] && CONTAINER="$1" && docker exec $CONTAINER strongswan stop && exit 0

# check for running container
if [ -f ./.container ]; then
  CONTAINER="`cat .container`"
else
  echo "No Running Container!"
  exit 1
fi

# disconnect
docker exec $CONTAINER /etc/strongswan/vpn_client.sh stop
